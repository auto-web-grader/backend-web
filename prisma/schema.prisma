generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  submissions Submission[]
}

model Submission {
  id Int @id @default(autoincrement())
  path String
  type String
  correctTests Int?
  totalTests Int?
  submitTime DateTime @default(now())
  authorId Int
  author User @relation(fields: [authorId], references: [id])
}
